@page "/tasks"
@using StudyPlan.Data;
@using System;
@using System.Text.Json;

@if (@taskId > 0)
{
    <button @onclick="Back">Back</button>
    <br><br>
    <EditTask id=@taskId />
}
else
{
    <h1>View Tasks</h1>
    <br>
    <table>
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Estimated Time</th>
            <th>Due Date</th>
            <th></th>
        </tr>
        @foreach (StudyTask task in tasks)
        {
            <tr>
                <td>@task.name</td>
                <td>@task.subject.name</td>
                <td>@task.estimatedTime.ToString()</td>
                <td>@task.dueDate.ToString()</td>
                <td><button @onclick="(() => taskId = task.id)">Edit</button></td>
            </tr>
        }
    </table>
}

@code {
    private List<StudyTask> tasks = new List<StudyTask>();
    private int taskId = 0;

    protected override void OnInitialized()
    {
        tasks = StudyTask.FetchAll();
    }

    private void UpdateTaskId(int id)
    {
        taskId = id;
    }

    private void Back()
    {
        taskId = 0;
        tasks = StudyTask.FetchAll();
    }

    public TimeSpan ConvertToTimeSpan(float hours)
    {
        int totalMinutes = (int)(hours * 60);

        return TimeSpan.FromMinutes(totalMinutes);
    }
}
